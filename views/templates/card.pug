
div(class="bg-white shadow rounded-lg w-[270px] sm:w-[400px]")
    div(class="h-[209px] flex")
        img(class="object-cover h-54 w-full " src=`/uploads/${propiedad.foto.path}` alt=`Imagen de: ${propiedad.titulo}`)
    div(class="p-5 spac-y-5 h-[230px]")
        h3(class='text-xl font-bold ')= propiedad.titulo 
        div(class='my-4')
            p(class="text-sm text-gray-600 leading-6") Habitaciones: 
                span(class="text-gray-800 font-bold ")= propiedad.dormitorios 
            p(class="text-sm text-gray-600 leading-6") Baño/s: 
                span(class='text-gray-800 font-bold')= propiedad.baños
            p(class="text-sm text-gray-600 leading-6") Precio: 
                span(class="text-gray-800 font-bold") $#{propiedad.precio.precio}
        a(href=`/propiedades/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad 